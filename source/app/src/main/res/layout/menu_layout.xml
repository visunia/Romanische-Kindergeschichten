<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginVertical="6dp"
    android:background="@android:color/transparent"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:paddingHorizontal="@dimen/_15sdp"
    >


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgDrawable"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="visible"
        app:tint="@color/day_night_foreground"
        tools:srcCompat="@drawable/ic_settings" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/tvTitle"
        style="@style/TextViewValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:text="TextView"
        android:textColor="@color/day_night_foreground"
        />


    <ImageView
        android:id="@+id/imgArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/small_arrrow_right"
        app:tint="@color/day_night_foreground" />

</LinearLayout>