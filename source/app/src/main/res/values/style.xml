<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">@bool/statusBarColorLight</item>
        <item name="fontFamily">@font/lato</item>
    </style>


    <style name="AppTheme.NoActionBarMainMenu">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Splash" parent="AppTheme.AppBarOverlay">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TextViewTitleBar" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_title_bar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="marginHorizontal">10dp</item>
    </style>


    <style name="TextViewValue" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="marginHorizontal">10dp</item>
    </style>

    <dimen name="text_normal">12sp</dimen>
    <dimen name="textsize">14sp</dimen>

    <style name="MyButton" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="android:textColor">@color/day_night_foreground</item>
        <item name="iconTint">@color/day_night_foreground</item>
        <item name="backgroundTint">@color/day_night_background</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">start</item>
        <item name="textAllCaps">false</item>
        <item name="android:elevation">14dp</item>
    </style>

    <style name="MyButtonHighlighted" parent="MyButton">
        <item name="android:textColor">@color/day_night_background</item>
        <item name="iconTint">@color/day_night_background</item>
        <item name="backgroundTint">@color/text_primary_to_white</item>
    </style>


    <style name="TextViewLabel" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="marginHorizontal">10dp</item>
    </style>


    <style name="WrapContentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
    </style>

    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textsize</item>
        <item name="android:textColor">@color/day_night_foreground</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

</resources>